{
  "name": "TechCorp Enterprise AI Workshop",
  "image": "mcr.microsoft.com/devcontainers/python:3.11-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "moby": false,
      "dockerDashComposeVersion": "v2",
      "enableNonRootDocker": "true"
    }
  },
  "postCreateCommand": "bash .devcontainer/setup.sh",
  "postStartCommand": "echo 'source /workspaces/ai-app3/venv/bin/activate' >> ~/.bashrc",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.pylint",
        "ms-python.black-formatter",
        "ms-toolsai.jupyter",
        "ms-vscode.vscode-json",
        "GitHub.copilot",
        "GitHub.copilot-chat"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/workspaces/ai-app3/venv/bin/python",
        "python.terminal.activateEnvironment": true,
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "args": ["-c", "source /workspaces/ai-app3/venv/bin/activate && exec bash"]
          }
        }
      }
    }
  },
  "forwardPorts": [8000, 8501, 7860, 11434],
  "portsAttributes": {
    "8000": {
      "label": "MCP Server",
      "onAutoForward": "notify"
    },
    "8501": {
      "label": "Streamlit",
      "onAutoForward": "openBrowser"
    },
    "7860": {
      "label": "Gradio",
      "onAutoForward": "openBrowser"
    },
    "11434": {
      "label": "Ollama",
      "onAutoForward": "ignore"
    }
  },
  "remoteUser": "vscode"
}