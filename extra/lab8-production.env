# Production Environment Configuration for TechCorp AI Services

# Database Configuration
DATABASE_URL=postgresql://techcorp_user:secure_password@db:5432/techcorp_ai
REDIS_URL=redis://redis:6379/0

# Security Configuration
JWT_SECRET_KEY=your-production-jwt-secret-key-change-this-in-production
ENCRYPTION_KEY=your-production-encryption-key-32-chars-long
BCRYPT_ROUNDS=12

# Service Configuration
OLLAMA_HOST=http://localhost:11434
API_HOST=0.0.0.0
API_PORT=8000
STREAMLIT_PORT=8501

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_ADMIN_PASSWORD=secure_grafana_password
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
AUDIT_LOG_PATH=/app/logs/audit.log
ACCESS_LOG_PATH=/app/logs/access.log
ERROR_LOG_PATH=/app/logs/error.log

# Performance Configuration
WORKER_PROCESSES=4
MAX_CONNECTIONS=1000
TIMEOUT=30
KEEPALIVE=2

# Security Headers
SECURITY_HEADERS_ENABLED=true
CORS_ORIGINS=https://techcorp.com,https://app.techcorp.com
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Enterprise Integration
LDAP_SERVER=ldap://corporate.techcorp.com
SSO_PROVIDER=azure_ad
AUDIT_WEBHOOK_URL=https://audit.techcorp.com/webhook

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=techcorp-ai-backups

# Alerting Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
EMAIL_ALERTS_ENABLED=true
ALERT_THRESHOLD_ERROR_RATE=5
ALERT_THRESHOLD_RESPONSE_TIME=5000